<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Opret Bruger"
             x:Class="TodoREST.Views.OpretBruger">
    <ContentPage.Content>
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0">
                <Label Text="Indtast ønsket brugernavn og password" />
                <Entry Text="{Binding brugerid}"
                       Placeholder="Brugernavn" />
                <Entry Text="{Binding id}"
                       Placeholder="Password"
                        />
                <Entry Text="{}"
                       Placeholder="Bekræft password"
                       IsPassword="True" />
                <Label Text="Passwords matcher ikke"
                        
                       TextColor="Red" />
            </StackLayout>
            <Button Grid.Row="2" Text="Opret" Clicked="OnOpretBruger" />
        </Grid>
    </ContentPage.Content>
</ContentPage>