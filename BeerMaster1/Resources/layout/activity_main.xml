<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:orientation="vertical" android:layout_width="match_parent"
 android:layout_height="match_parent"
   android:background="@mipmap/olbong">
    <TextView
        android:text="BONGMASTER"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:textSize="30dp"
        android:layout_marginTop="100px"
        android:id="@+id/textView1"
        android:layout_gravity="center"
        android:layout_width="wrap_content" />
    <Button
        android:text="Start lokalt spil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="300px"
        
        android:id="@+id/lokalknap" />
    <Button
        android:text="start Online spil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100px"
        android:id="@+id/Onlineknap" />
    <Button
        android:text="Globalt Leaderboard"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        
        android:id="@+id/Leaderboardknap" />
    

</LinearLayout>
                  
